<div class="columns is-centered">
  <div class="column is-8-desktop is-10-tablet">
    <div id="estimations-index">
      <%= render @estimations %>
    </div>

    <%= form_for Estimation.new do |f| %>
      <div class="field has-addons">
        <div class="control is-expanded">
          <%= f.text_field :title, class: 'input', placeholder: 'New list title' %>
        </div>
        <div class="control">
          <%= f.submit 'Create estimation', class: 'button is-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>