<% page_title! @estimation.title %>

<ol id="<%= dom_id @estimation %>">
  <%= render @estimation.estimation_items %>
</ol>

<%= form_for [@estimation, EstimationItem.new], remote: true do |f| %>
  <%= f.number_field :value %>
  <%= f.text_field :title %>
  <%= f.submit 'Add estimation' %>
<% end %>

<h2><%= '%.2f' % @estimation.total %></h2>

<h3><%= @estimation.sum %></h3>
<h3><%= '%.2f' % @estimation.buffer %></h3>