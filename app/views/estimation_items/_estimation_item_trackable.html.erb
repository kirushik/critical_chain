<tr id="<%= dom_id estimation_item %>" data-order="<%= estimation_item.order %>">
  <td class="drag-handle" style="cursor: move; width: 30px;">
    <span class="fa fa-grip-vertical text-muted" style="opacity: 0.5;"></span>
  </td>
  <td class="text-right">
    <span class="lead">
    <% if estimation_item.quantity > 1 %>
      <span class="small text-muted"><%= "#{estimation_item.quantity}Ã—#{estimation_item.value}=" %></span>
    <% end %>
      <%= estimation_item.value * estimation_item.quantity %>
    </span>
  </td>

  <td>
    <% if estimation_item.fixed? %>
      <span class="fa fa-dot-circle-o"></span>
    <% end %>
  </td>

  <td><%= estimation_item.title %></td>
  <td>
    <%= estimation_item.decorate.editable :actual_value, type: :number %>
  </td>
</tr>