<tr id="<%= dom_id estimation_item %>">
  <td class="text-right">
    <span class="lead">
      <%= estimation_item.value %>
    </span>
  </td>
  <td>
    <% if estimation_item.fixed? %>
      <span class="fa fa-dot-circle-o"></span>
    <% end %>
  </td>
  <td><%= estimation_item.title %></td>
  <td>
    <%= icon(:copy) %>
    <%= estimation_item.quantity %>
  </td>
</tr>