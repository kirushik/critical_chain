<tr
  id="<%= dom_id estimation_item %>"
  class="<%= 'highlight-flash' if local_assigns[:highlight] %>"
>
  <%# Empty cell where drag handle would be in planning mode %>
  <td class="col-drag"></td>

  <%# Estimated Value %>
  <td class="col-calculation has-text-right">
    <span class="calculation-group">
      <% if estimation_item.quantity > 1 %>
        <span class="quantity has-text-grey">
          <%= "#{estimation_item.quantity}Ã—#{estimation_item.value}=" %>
        </span>
      <% end %>

      <span class="total">
        <%= estimation_item.value * estimation_item.quantity %>
      </span>
    </span>
  </td>

  <%# Fixed Indicator %>
  <td class="col-fixed has-text-centered">
    <% if estimation_item.fixed? %>
      <span
        class="has-text-info"
        title="Fixed estimate (excluded from buffer calculation)"
        aria-label="Fixed estimate"
      >
        <i class="fa-solid fa-thumbtack"></i>
      </span>
    <% end %>
  </td>

  <%# Title %>
  <td class="col-title"><%= estimation_item.title %></td>

  <%# Actual Value (Editable in tracking mode) %>
  <td class="col-actions has-text-right">
    <%= estimation_item.decorate.editable :actual_value, type: :number %>
  </td>
</tr>
