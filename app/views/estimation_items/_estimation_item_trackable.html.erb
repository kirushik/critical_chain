<tr id="<%= dom_id estimation_item %>" 
    data-order="<%= estimation_item.order %>"
    data-sortable-target="item"
    draggable="true"
    data-action="dragstart->sortable#dragStart dragend->sortable#dragEnd dragover->sortable#dragOver">
  <td class="has-text-right">
    <span class="is-size-5 has-text-weight-semibold">
    <% if estimation_item.quantity > 1 %>
      <span class="is-size-7 has-text-grey"><%= "#{estimation_item.quantity}Ã—#{estimation_item.value}=" %></span>
    <% end %>
      <%= estimation_item.value * estimation_item.quantity %>
    </span>
  </td>

  <td>
    <% if estimation_item.fixed? %>
      <span class="fa fa-dot-circle-o"></span>
    <% end %>
  </td>

  <td><%= estimation_item.title %></td>
  <td>
    <%= estimation_item.decorate.editable :actual_value, type: :number %>
  </td>
</tr>
